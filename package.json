{
	"name": "my-app",
	"version": "0.0.1",
	"private": true,
	"author": {
		"name": "Francesco Bruno"
	},
	"scripts": {
		"dev": "npm-run-all --parallel vite typesafe-i18n",
		"vite": "vite dev --port 4200",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-organize-imports --plugin=prettier-plugin-tailwindcss --write . --ignore-path .prettierignore",
		"typesafe-i18n": "typesafe-i18n",
		"cron": "node src/scripts/cron.js",
		"start": "npm-run-all --parallel node-server cron",
		"node-server": "node build",
		"postinstall": "node scripts/postinstall.js"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.6",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.21.5",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"@tailwindcss/postcss": "^4.1.10",
		"@types/node": "^24.0.3",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.9.2",
		"postcss": "^8.5.6",
		"postcss-nesting": "^13.0.2",
		"prettier": "^3.5.3",
		"svelte": "^5.34.6",
		"svelte-check": "^4.2.1",
		"svelte-sequential-preprocessor": "^2.0.2",
		"tailwindcss": "^4.1.10",
		"vite": "^6.3.5"
	},
	"type": "module",
	"dependencies": {
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.1.10",
		"carta-md": "^4.11.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.0.0",
		"cron": "^4.3.1",
		"dotenv": "^16.5.0",
		"eventsource": "^4.0.0",
		"isomorphic-dompurify": "^2.25.0",
		"lucide-svelte": "^0.518.0",
		"npm-run-all": "^4.1.5",
		"pantry-node": "^0.1.3",
		"pocketbase": "^0.26.1",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7",
		"typesafe-i18n": "^5.26.2",
		"typescript": "^5.8.3"
	},
	"packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
