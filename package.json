{
	"name": "my-app",
	"version": "0.0.1",
	"private": true,
	"author": {
		"name": "Francesco Bruno"
	},
	"scripts": {
		"dev": "npm-run-all --parallel vite typesafe-i18n",
		"vite": "vite dev --port 4200",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-organize-imports --plugin=prettier-plugin-tailwindcss --write . --ignore-path .prettierignore",
		"typesafe-i18n": "typesafe-i18n",
		"cron": "node src/scripts/cron.js",
		"start": "npm-run-all --parallel node-server cron",
		"node-server": "node build"
	},
	"devDependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/adapter-node": "^5.2.11",
		"@sveltejs/kit": "^2.12.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/node": "^22.10.2",
		"autoprefixer": "^10.4.15",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"postcss": "^8.4.49",
		"postcss-nesting": "^13.0.1",
		"prettier": "^3.4.2",
		"svelte": "^5.14.4",
		"svelte-check": "^4.1.1",
		"svelte-sequential-preprocessor": "^2.0.2",
		"tailwindcss": "^3.4.17",
		"vite": "^6.0.4"
	},
	"type": "module",
	"dependencies": {
		"@tailwindcss/typography": "^0.5.15",
		"@unovis/svelte": "^1.4.5",
		"@unovis/ts": "^1.4.5",
		"carta-md": "^4.6.7",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.0.0",
		"cron": "^3.3.1",
		"d3": "^7.9.0",
		"dotenv": "^16.4.7",
		"eventsource": "^3.0.2",
		"isomorphic-dompurify": "^2.19.0",
		"lucide-svelte": "^0.468.0",
		"npm-run-all": "^4.1.5",
		"osmtogeojson": "^3.0.0-beta.5",
		"pantry-node": "^0.1.3",
		"pocketbase": "^0.24.0",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"tailwind-merge": "^2.5.5",
		"tailwindcss-animate": "^1.0.7",
		"typesafe-i18n": "^5.26.2",
		"typescript": "^5.7.2"
	}
}
